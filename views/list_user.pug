extends main.pug
block content
        h2(class="sub-header") Players
        a(href="/reg", class="btn btn-primary btn-lg active", role="button") Add
        table.table.table-bordered
            tr
                th #
                th First Name
                th Last Name
                th Age
                th Sport Name
                th Actions
            if (users.length)
                each u, i in users
                    tr
                        td #{i}
                        td #{u.first_name}
                        td #{u.last_name}
                        td #{u.age}
                        td #{u.sport_name}
                        td 
                            button(type="button", class="btn btn-danger btn-sm", onclick="delete_user(this);") Remove
            else
                tr
                    td(colspan=5) No users