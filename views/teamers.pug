extends main.pug
block content
        h2(class="sub-header") Teamers
        a(href="/teamer/add", class="btn btn-primary active", role="button") Add New
        table.table.table-bordered.table-hover
            tr
                th #
                th Team Name
                th Last Name
                th Player number
                th Sport Name
                th Actions
            if (teamers.length)
                each u, i in teamers
                    tr
                        td #{i+1}
                        td #{u.team_name}
                        td #{u.player_number}
                        if u.sport
                          td #{u.sport.desc}
                        else 
                          td #{u.sport_name}
                        td 
                            button(type="button", class="btn btn-danger btn-sm", onclick="delete_teamer('"+u._id+"');") Remove
                            a(href="/teamer/"+u._id, class="btn btn-primary btn-sm active", role="button") Edit
            else
                tr
                    td(colspan=5) No Teamers