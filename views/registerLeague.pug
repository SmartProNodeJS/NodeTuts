extends main.pug
block content
        h2(class="sub-header") Leagues
        div(style={width: "60%"})
            form.form-horizontal(name="registerLeague", action="/leagues/", method="POST")
                .form-group
                    label(for="name",class="col-sm-2 control-label") Name: 
                    .col-sm-10
                        input(name="_id",type="hidden", id="_id", value="0" )
                        input(name="name",type="text", class="form-control", id="name", placeholder="Name" )
                .form-group
                    label(for="start",class="col-sm-2 control-label") Start: 
                    .col-sm-10
                        input(name="start",type="text", class="form-control", id="start", placeholder="Start")
                .form-group
                    label(for="end",class="col-sm-2 control-label") End: 
                    .col-sm-10
                        input(name="end",type="text", class="form-control", id="end", placeholder="End")
                .form-group
                    label(for="place",class="col-sm-2 control-label") Place: 
                    .col-sm-10
                        input(name="place",type="text", class="form-control", id="place", placeholder="Place")
                .form-group
                    label(for="sport",class="col-sm-2 control-label") Sports: 
                    .col-sm-10
                        select(name="sport",class="form-control", id="sport")    
                            each sp in sport_list 
                                option(value=sp.name) #{sp.desc}
                .form-group
                    label(for="is_double",class="col-sm-2 control-label") Is_double: 
                    .col-sm-10
                        input(name="is_double",type="text", class="form-control", id="is_double", placeholder="Is double?")
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button(type="submit",class="btn btn-default") Sign in
