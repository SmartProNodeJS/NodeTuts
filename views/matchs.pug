extends main.pug
block content
        h2(class="sub-header") Matchs
        a(href="/match/add", class="btn btn-primary active", role="button") Add New
        table.table.table-bordered.table-hover
            tr
                th #
                th Match name
                th Datetime start
                th Datetime end
                th Team
                th Score
                th Actions
            if (matchs.length)
                each u, i in matchs
                    tr
                        td #{i+1}
                        td #{u.match_name}
                        td #{u.datetime_start}
                        td #{u.datetime_end}
                        if u.team
                          td #{u.team.desc}
                        else 
                          td #{u.team_name}
                        td #{u.score}
                        td 
                            button(type="button", class="btn btn-danger btn-sm", onclick="delete_match('"+u._id+"');") Remove
                            a(href="/match/"+u._id, class="btn btn-primary btn-sm active", role="button") Edit
            else
                tr
                    td(colspan=5) No Matchs