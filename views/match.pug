extends main.pug
block content
        h2(class="sub-header") Matches
        div(style={width: "60%"})
            form.form-horizontal(name="registerForm", action="/match/", method="POST")
                input(name="obj_id",type="hidden", value=match._id)
                .form-group
                    label(for="match_name",class="col-sm-4 control-label") Match Name: 
                    .col-sm-8
                      input(name="match_name",type="text", class="form-control", id="match_name", placeholder="Match Name" value=match.match_name)
                .form-group
                    label(for="number_team",class="col-sm-4 control-label") Number of teams: 
                    .col-sm-8
                      input(name="number_team",type="number", class="form-control", id="number_team", placeholder="Number of teams", value=match.number_team)
                .form-group
                    label(for="sport_id",class="col-sm-4 control-label") Sports: 
                    .col-sm-8
                        select(name="sport_name",class="form-control", id="sport_id")
                          if sport_list
                            each sp in sport_list
                              option(value=sp.name, selected="selected") #{sp.desc}
                .form-group
                    .col-sm-offset-4.col-sm-8
                        button(type="submit",class="btn btn-primary active") #{btn_caption}
                        a(href="/match/", class="btn btn-default", role="button") Cancel
