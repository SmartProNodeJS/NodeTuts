extends main.pug
block content
        h2(class="sub-header") Leagues
        div(style={width: "60%"})
            form.form-horizontal(name="leagueForm", action="/league/", method="POST")
                input(name="obj_id",type="hidden", id="id", value=league._id)
                .form-group
                    label(for="name",class="col-sm-2 control-label") Name: 
                    .col-sm-10
                        input(name="name",type="text", class="form-control", id="name", value=league.name, placeholder="League Name")
                .form-group
                    label(for="start",class="col-sm-2 control-label") Start: 
                    .col-sm-10
                        input(name="start",type="text", class="form-control", id="start", value=league.start, placeholder="Start")
                .form-group
                    label(for="end",class="col-sm-2 control-label") End: 
                    .col-sm-10
                        input(name="end",type="text", class="form-control", id="end", value=league.end, placeholder="End")
                .form-group
                    label(for="sponsors",class="col-sm-2 control-label") Sponsors: 
                    .col-sm-10
                        input(name="sponsors",type="text", class="form-control", id="sponsors", value=league.sponsors, placeholder="Sponsors")
                .form-group
                    label(for="organiser",class="col-sm-2 control-label") Organiser: 
                    .col-sm-10
                        input(name="organiser",type="text", class="form-control", id="organiser", value=league.organiser, placeholder="Organiser")
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button(type="submit",class="btn btn-default") Save
                        a(href="/league/", class="btn btn-default", role="button") Cancel
