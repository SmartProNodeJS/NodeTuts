extends main.pug
block content
        div(style={width: "60%"})
            form.form-horizontal(name="registerForm", action="registerUser", method="POST")
                .form-group
                    label(for="f_name",class="col-sm-2 control-label") First Name: 
                    .col-sm-10
                        input(name="first_name",type="text", class="form-control", id="f_name", placeholder="First Name")
                .form-group
                    label(for="l_name",class="col-sm-2 control-label") Last Name: 
                    .col-sm-10
                        input(name="last_name",type="text", class="form-control", id="l_name", placeholder="Last Name")
                .form-group
                    label(for="age_id",class="col-sm-2 control-label") Age: 
                    .col-sm-10
                        input(name="age",type="text", class="form-control", id="age_id", placeholder="Age")
                .form-group
                    label(for="sport_id",class="col-sm-2 control-label") Sports: 
                    .col-sm-10
                        select(name="sport_name",class="form-control", id="sport_id")    
                            each sp in sport_list 
                                option(value=sp.name) #{sp.desc}
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button(type="submit",class="btn btn-default") Sign in
